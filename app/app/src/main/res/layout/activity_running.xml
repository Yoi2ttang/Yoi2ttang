<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1) 카운트다운 화면 -->
    <FrameLayout
        android:id="@+id/countdown_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <TextView
            android:id="@+id/countdown_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="128dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!-- 2) 러닝 화면 (초기에는 감춤) -->
    <FrameLayout
        android:id="@+id/running_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- 2-1) MapView -->
        <com.naver.maps.map.MapView
            android:id="@+id/map_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.naver.maps.map.MapFragment" />


<!--        &lt;!&ndash; 2-2) 상단 러닝 타이머 &ndash;&gt;-->
<!--        <TextView-->
<!--            android:id="@+id/timer_text"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:padding="40sp"-->
<!--            android:textSize="32sp"-->
<!--            android:textColor="@color/black"-->
<!--            android:textStyle="bold|italic"-->
<!--            android:layout_gravity="top|center_horizontal"/>-->
        <!-- 2-2) 상단 타이머 + 상태 표시 영역 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top|center_horizontal"
            android:paddingTop="40dp">

            <!-- 타이머 텍스트 -->
            <TextView
                android:id="@+id/timer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:textStyle="bold|italic" />

            <!-- 네모 + 텍스트 수평 표시 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal">

                <!-- 네모 박스 -->
<!--                <View-->
<!--                    android:layout_width="24dp"-->
<!--                    android:layout_height="24dp"-->
<!--                    android:background="@color/orange"-->
<!--                    android:layout_marginEnd="8dp"-->
<!--                    android:rotation="-12"/>-->
                <com.ssafy.yoittang.view.RotatedBoxView
                    android:id="@+id/rotated_box"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

                <!-- 텍스트 -->
                <TextView
                    android:id="@+id/tile_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

            </LinearLayout>
        </LinearLayout>


        <!-- 2-3) 오버레이 열기 버튼 -->
        <ImageButton
            android:id="@+id/btn_overlay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            android:background="@android:color/white"
            android:src="@android:drawable/ic_media_previous"/>

        <!-- 2-4) 슬라이드 오버레이 (BottomSheet 스타일) -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<!--            <com.google.android.material.bottomsheet.BottomSheetBehavior-->
<!--                android:id="@+id/overlay_sheet"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content">-->

                <LinearLayout
                    android:id="@+id/overlay_info"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:elevation="8dp"
                    android:visibility="gone"
                    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: 00:00"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance: 0.0 km"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tv_calories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories: 0 kcal"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tv_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Speed: 0.0 km/h"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/btn_pause_resume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pause"/>

                    <Button
                        android:id="@+id/btn_close"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Close"/>
                </LinearLayout>
<!--            </com.google.android.material.bottomsheet.BottomSheetBehavior>-->
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </FrameLayout>
</FrameLayout>
